<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:background="#3B3B3B">

    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
              android:text="应用已被锁定"
              android:gravity="center"
              android:textSize="24sp"
              android:textColor="@color/white"
              android:background="@color/red_1"
              android:id="@+id/keyguard_app_lock"
              android:visibility="gone"/>


    <Button
            android:layout_width="120dp"
            android:layout_height="42dp"
            android:text="使用图片解锁"
            android:id="@+id/keyguard_change_btn"
            android:layout_gravity="end|top"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/white_btn"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:textSize="24sp"
              android:text="请输入解锁密码"
              android:padding="16dp"
              android:layout_marginTop="48dp"
              android:textColor="@color/white"
            />

    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:orientation="horizontal">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:maxLength="1"
                android:ems="10"
                android:id="@+id/keyguard_keyboard_input" android:layout_gravity="center_horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textSize="18sp"
                android:layout_marginTop="64dp"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                />
    </LinearLayout>

    <include layout="@layout/keyboard"
             android:visibility="visible"/>

</LinearLayout>
