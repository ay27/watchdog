<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:gravity="center"
             android:background="#ffffff">

    <bitman.ay27.watchdog.widget.keyboard.RandomNumericKeyboard android:layout_width="wrap_content"
                                                                android:layout_height="wrap_content"
                                                                android:layout_gravity="center_horizontal|bottom"
                                                                android:id="@+id/keyguard_numeric"
                                                                android:layout_marginBottom="16dp"/>

    <bitman.ay27.watchdog.widget.keyboard.RandomCharKeyboard android:layout_width="wrap_content"
                                                             android:layout_height="wrap_content"
                                                             android:layout_gravity="bottom|center_horizontal"
                                                             android:layout_marginBottom="16dp"
                                                             android:id="@+id/keyguard_char"/>

</FrameLayout>
