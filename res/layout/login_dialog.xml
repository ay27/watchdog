<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="340dp"
              android:layout_height="match_parent"
              android:padding="16dp">

    <RadioGroup android:layout_width="fill_parent" android:layout_height="48dp"
                android:orientation="horizontal"
                android:id="@+id/login_dialog_radio_group"
                android:showDividers="middle"
                android:divider="?android:attr/actionBarDivider"
            >
        <RadioButton android:layout_width="fill_parent" android:layout_height="fill_parent"
                     android:layout_weight="1"
                     android:button="@null"
                     android:text="登录"
                     android:gravity="center"
                     android:id="@+id/login_dialog_radio_login"
                     android:background="@drawable/transparent_item_bg_blue_1"
                     android:textColor="@color/black_color_selector"/>
        <RadioButton android:layout_width="fill_parent" android:layout_height="fill_parent"
                     android:layout_weight="1"
                     android:button="@null"
                     android:text="注册"
                     android:gravity="center"
                     android:id="@+id/login_dialog_radio_sign_up"
                     android:background="@drawable/transparent_item_bg_blue_1"
                     android:textColor="@color/black_color_selector"/>
    </RadioGroup>

    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:id="@+id/login_dialog_blank_view"/>

</LinearLayout>