<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

    <include layout="@layout/toolbar"
             android:id="@+id/main_toolbar"/>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="vertical"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                >

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="账号"
                      style="@style/PreferenceCatalog"
                    />
            <include layout="@layout/divider_large"/>

            <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                          style="@style/PreferencePanel"
                          android:id="@+id/main_login_panel">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="用户名"
                          style="@style/PreferenceFirstText"
                          android:id="@+id/main_user_name"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="请登录"
                          style="@style/PreferenceSecondText"
                          android:id="@+id/main_user_summer"
                        />
            </LinearLayout>

            <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                      style="@style/PreferenceCatalog"
                      android:text="SD卡加密"/>
            <include layout="@layout/divider_large"/>
            <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                          style="@style/PreferencePanel"
                          android:id="@+id/main_sd_panel">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="@string/sd_no_sd_card"
                          style="@style/PreferenceFirstText"
                          android:id="@+id/main_sd_title"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="@string/sd_no_sd_card_summer"
                          style="@style/PreferenceSecondText"
                          android:id="@+id/main_sd_summer"
                        />
            </LinearLayout>

            <include layout="@layout/divider_small"/>

            <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                          style="@style/PreferencePanel"
                          android:id="@+id/main_sd_format_panel"
                          android:clickable="false"
                    >
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="格式化SD卡"
                          style="@style/PreferenceFirstText"
                          android:id="@+id/main_sd_format_title"
                          android:enabled="false"
                        />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="清空SD卡"
                          style="@style/PreferenceSecondText"
                          android:id="@+id/main_sd_format_summer"
                          android:enabled="false"
                        />
            </LinearLayout>


            <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                      style="@style/PreferenceCatalog"
                      android:text="开关"/>
            <include layout="@layout/divider_large"/>
            <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
                <LinearLayout android:layout_width="270dp" android:layout_height="wrap_content"
                              style="@style/PreferencePanel"
                              android:layout_alignParentTop="true"
                              android:layout_alignParentStart="true"
                              android:clickable="false">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              style="@style/PreferenceFirstText"
                              android:text="刷机锁"/>
                    <!--<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"-->
                              <!--style="@style/PreferenceSecondText"-->
                              <!--android:text="保护机器不被恶意刷机"-->
                              <!--android:id="@+id/main_boot_loader_summer"/>-->
                </LinearLayout>
                <com.kyleduo.switchbutton.SwitchButton
                        android:id="@+id/main_boot_loader_lock_switch"
                        style="@style/MaterialDesignStyle"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="16dp"
                        android:layout_centerVertical="true"
                        />
            </RelativeLayout>

            <!--<RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content">-->
                <!--<LinearLayout android:layout_width="270dp" android:layout_height="wrap_content"-->
                              <!--style="@style/PreferencePanel"-->
                              <!--android:layout_alignParentTop="true"-->
                              <!--android:layout_alignParentStart="true"-->
                              <!--android:clickable="false">-->
                    <!--<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"-->
                              <!--style="@style/PreferenceFirstText"-->
                              <!--android:text="SD卡加密"/>-->
                    <!--&lt;!&ndash;<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"&ndash;&gt;-->
                              <!--&lt;!&ndash;style="@style/PreferenceSecondText"&ndash;&gt;-->
                              <!--&lt;!&ndash;android:text="加密SD卡"&ndash;&gt;-->
                              <!--&lt;!&ndash;android:id="@+id/main_sd_encrypt_summer"/>&ndash;&gt;-->
                <!--</LinearLayout>-->
                <!--<com.kyleduo.switchbutton.SwitchButton-->
                        <!--android:id="@+id/main_sd_encrypt_switch"-->
                        <!--style="@style/MaterialDesignStyle"-->
                        <!--android:layout_alignParentEnd="true"-->
                        <!--android:layout_marginEnd="16dp"-->
                        <!--android:layout_centerVertical="true"-->
                        <!--/>-->
            <!--</RelativeLayout>-->

            <include layout="@layout/divider_small"/>
            <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
                <LinearLayout android:layout_width="270dp" android:layout_height="wrap_content"
                              style="@style/PreferencePanel"
                              android:layout_alignParentTop="true"
                              android:layout_alignParentStart="true"
                              android:clickable="false">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              style="@style/PreferenceFirstText"
                              android:text="屏幕锁定"/>
                    <!--<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"-->
                              <!--style="@style/PreferenceSecondText"-->
                              <!--android:text="@string/keyguard_disable"-->
                              <!--android:id="@+id/main_keyguard_summer"/>-->
                </LinearLayout>
                <com.kyleduo.switchbutton.SwitchButton
                        android:id="@+id/main_keyguard_switch"
                        style="@style/MaterialDesignStyle"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="16dp"
                        android:layout_centerVertical="true"
                        />
            </RelativeLayout>

            <include layout="@layout/divider_small"/>
            <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
                <LinearLayout android:layout_width="270dp" android:layout_height="wrap_content"
                              style="@style/PreferencePanel"
                              android:layout_alignParentTop="true"
                              android:layout_alignParentStart="true"
                              android:clickable="false">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              style="@style/PreferenceFirstText"
                              android:text="USB调试"/>
                    <!--<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"-->
                              <!--style="@style/PreferenceSecondText"-->
                              <!--android:text="@string/usb_disable"-->
                              <!--android:id="@+id/main_usb_summer"/>-->
                </LinearLayout>
                <com.kyleduo.switchbutton.SwitchButton
                        android:id="@+id/main_usb_switch"
                        style="@style/MaterialDesignStyle"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="16dp"
                        android:layout_centerVertical="true"
                        />
            </RelativeLayout>


            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="密码设定"
                      style="@style/PreferenceCatalog"
                    />
            <include layout="@layout/divider_large"/>
            <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                          style="@style/PreferencePanel"
                          android:id="@+id/main_draw_panel">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="绘图密码"
                          style="@style/PreferenceFirstText"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="首选密码"
                          style="@style/PreferenceSecondText"/>
            </LinearLayout>

            <include layout="@layout/divider_small"/>

            <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                          style="@style/PreferencePanel"
                          android:id="@+id/main_sec_passwd_panel">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="第二密码"
                          style="@style/PreferenceFirstText"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="备用密码"
                          style="@style/PreferenceSecondText"/>
            </LinearLayout>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      style="@style/PreferenceCatalog"
                      android:text="外部设备"/>
            <include layout="@layout/divider_large"/>
            <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                          style="@style/PreferencePanel"
                          android:id="@+id/main_bind_watch_panel">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          style="@style/PreferenceFirstText"
                          android:text="换绑手表"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          style="@style/PreferenceSecondText"
                          android:text="当前没有绑定手表"
                          android:id="@+id/main_bind_watch_summer"/>
            </LinearLayout>
            <include layout="@layout/divider_small"/>
            <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                          style="@style/PreferencePanel"
                          android:id="@+id/main_bind_nfc_panel">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          style="@style/PreferenceFirstText"
                          android:text="绑定NFC卡"
                        />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          style="@style/PreferenceSecondText"
                          android:text="当前没有绑定NFC卡"
                          android:id="@+id/main_bind_nfc_summer"/>
            </LinearLayout>


            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      style="@style/PreferenceCatalog"
                      android:text="关于"/>
            <include layout="@layout/divider_large"/>
            <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                          style="@style/PreferencePanel"
                          android:id="@+id/main_about_panel">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          style="@style/PreferenceText"
                          android:text="关于"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>