<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/toolbar"
            android:id="@+id/passwd_choose_img_toolbar"/>

    <TextView android:layout_width="320dp" android:layout_height="100dp"
            android:text="选择一张自己喜爱的图片作为绘图背景，或者选择我们提供的默认背景\n这个背景图片可以帮助记忆你的速度轨迹密码"
            android:gravity="center"
            android:padding="16dp"
            android:layout_gravity="center_horizontal"/>

    <ImageView android:layout_width="fill_parent" android:layout_height="300dp"
            android:src="@drawable/default_draw_background"
            android:id="@+id/passwd_choose_img_img"/>

    <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="16dp">
        <Button android:layout_width="150dp" android:layout_height="42dp"
                android:text="选取图片"
                android:textSize="14sp"
                android:background="@drawable/white_btn"
                android:layout_alignParentStart="true"
                android:id="@+id/passwd_choose_img_choose"
                android:onClick="chooseImgClick"/>
        <Button android:layout_width="150dp" android:layout_height="42dp"
                android:layout_gravity="right"
                android:text="下一步"
                android:textSize="14sp"
                android:background="@drawable/white_btn"
                android:layout_alignParentEnd="true"
                android:id="@+id/passwd_choose_img_next"
                android:onClick="nextClick"/>
    </RelativeLayout>

</LinearLayout>
