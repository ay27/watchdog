<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <bitman.ay27.watchdog.widget.PasswdEdt android:layout_width="fill_parent"
                                           android:layout_height="wrap_content"
                                           android:layout_marginTop="64dp"
                                           android:layout_marginBottom="64dp"
            android:id="@+id/passwd_edt"/>


    <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="4"
            android:columnCount="3"
            android:layout_gravity="center">
        <Button style="@style/keyboard_btn_style"
                android:text="1"
                android:layout_column="0"
                android:layout_row="0"
                android:id="@+id/key_btn_1"
                />
        <Button style="@style/keyboard_btn_style"
                android:text="2"
                android:layout_column="1"
                android:layout_row="0"
                android:id="@+id/key_btn_2"
                />
        <Button style="@style/keyboard_btn_style"
                android:text="3"
                android:layout_column="2"
                android:layout_row="0"
                android:id="@+id/key_btn_3"
                />
        <Button style="@style/keyboard_btn_style"
                android:text="4"
                android:layout_column="0"
                android:layout_row="1"
                android:id="@+id/key_btn_4"
                />
        <Button style="@style/keyboard_btn_style"
                android:text="5"
                android:layout_column="1"
                android:layout_row="1"
                android:id="@+id/key_btn_5"
                />

        <Button style="@style/keyboard_btn_style"
                android:text="6"
                android:layout_column="2"
                android:layout_row="1"
                android:id="@+id/key_btn_6"
                />

        <Button style="@style/keyboard_btn_style"
                android:text="7"
                android:layout_column="0"
                android:layout_row="2"
                android:id="@+id/key_btn_7"
                />
        <Button style="@style/keyboard_btn_style"
                android:text="8"
                android:layout_column="1"
                android:layout_row="2"
                android:id="@+id/key_btn_8"
                />
        <Button style="@style/keyboard_btn_style"
                android:text="9"
                android:layout_column="2"
                android:layout_row="2"
                android:id="@+id/key_btn_9"
                />
        <Button style="@style/keyboard_btn_style"
                android:text="╳"
                android:layout_column="0"
                android:layout_row="3"
                android:id="@+id/key_btn_cancel"
                />
        <Button style="@style/keyboard_btn_style"
                android:text="0"
                android:layout_column="1"
                android:layout_row="3"
                android:id="@+id/key_btn_0"
                />
        <Button style="@style/keyboard_btn_style"
                android:text="←"
                android:layout_column="2"
                android:layout_row="3"
                android:id="@+id/key_btn_back"
                />
    </GridLayout>

    <!--<include layout="@layout/keyboard" />-->

</LinearLayout>
