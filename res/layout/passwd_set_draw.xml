<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <bitman.ay27.watchdog.ui.activity.widget.DrawingCanvas android:layout_width="match_parent"
                                                           android:layout_height="match_parent"
                                                           android:background="@drawable/default_draw_background"
                                                           android:id="@+id/passwd_set_draw_canvas"/>

    <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:padding="16dp"
            android:id="@+id/passwd_set_draw_widget_panel">
        <Button android:layout_width="150dp" android:layout_height="42dp"
                android:text="清空重来"
                android:textSize="14sp"
                android:background="@drawable/white_btn"
                android:layout_alignParentStart="true"
                android:id="@+id/passwd_set_draw_clear"
                android:onClick="chooseImgClick"/>
        <Button android:layout_width="150dp" android:layout_height="42dp"
                android:layout_gravity="end"
                android:text="下一步"
                android:textSize="14sp"
                android:background="@drawable/white_btn"
                android:layout_alignParentEnd="true"
                android:id="@+id/passwd_set_draw_next"
                android:onClick="nextClick"/>
    </RelativeLayout>

</FrameLayout>
