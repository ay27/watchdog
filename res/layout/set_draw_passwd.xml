<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <bitman.ay27.watchdog.ui.DrawingCanvas android:layout_width="match_parent" android:layout_height="match_parent"
                                           android:background="@drawable/image1"
                                           android:id="@+id/set_draw_passwd_canvas"/>

    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:id="@+id/set_draw_passwd_widget"
                  android:gravity="center_horizontal"
            >
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:background="#88ffffff"
                android:text="更改图片"
                android:layout_margin="16dp"
                android:id="@+id/set_draw_passwd_change_img"
                />
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:background="#88ffffff"
                android:layout_margin="16dp"
                android:text="保存"
                android:id="@+id/set_draw_passwd_save"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:background="#88ffffff"
                android:layout_margin="16dp"
                android:text="对比"
                android:id="@+id/set_draw_passwd_comp"/>
    </LinearLayout>

</FrameLayout>
