<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_gravity="center">


    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:focusable="false"
            android:editable="false"
            android:id="@+id/char_passwd_input"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:hint="输入密码"
            android:gravity="center"/>
    <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="4"
            android:columnCount="10"
            android:layout_gravity="center"
            >

        <Button
                style="@style/keyboard_char_style"
                android:text="1"
                android:id="@+id/button1"
                android:layout_column="0"
                android:layout_row="0"
                />
        <Button
                style="@style/keyboard_char_style"
                android:text="2"
                android:id="@+id/button2"
                android:layout_column="1"
                android:layout_row="0"
                />
        <Button
                style="@style/keyboard_char_style"
                android:text="3"
                android:id="@+id/button3"
                android:layout_column="2"
                android:layout_row="0"
                />
        <Button
                style="@style/keyboard_char_style"
                android:text="4"
                android:id="@+id/button4"
                android:layout_column="3"
                android:layout_row="0"
                />
        <Button
                style="@style/keyboard_char_style"
                android:text="5"
                android:id="@+id/button5"
                android:layout_column="4"
                android:layout_row="0"
                />
        <Button
                style="@style/keyboard_char_style"
                android:text="6"
                android:id="@+id/button6"
                android:layout_column="5"
                android:layout_row="0"
                />
        <Button
                style="@style/keyboard_char_style"
                android:text="7"
                android:id="@+id/button7"
                android:layout_column="6"
                android:layout_row="0"
                />
        <Button
                style="@style/keyboard_char_style"
                android:text="8"
                android:id="@+id/button8"
                android:layout_column="7"
                android:layout_row="0"
                />
        <Button
                style="@style/keyboard_char_style"
                android:text="9"
                android:id="@+id/button9"
                android:layout_column="8"
                android:layout_row="0"
                />
        <Button
                style="@style/keyboard_char_style"
                android:text="0"
                android:id="@+id/button0"
                android:layout_column="9"
                android:layout_row="0"
                />
        <Button
                style="@style/keyboard_char_style"
                android:text="a"
                android:id="@+id/buttona"
                android:layout_column="0"
                android:layout_row="1"
                />
        <Button
                style="@style/keyboard_char_style"
                android:text="b"
                android:id="@+id/buttonb"
                android:layout_row="1"
                android:layout_column="1"
                />
        <Button
                style="@style/keyboard_char_style"
                android:text="c"
                android:id="@+id/buttonc"
                android:layout_row="1"
                android:layout_column="2"
                />
        <Button
                style="@style/keyboard_char_style"
                android:text="d"
                android:id="@+id/buttond"
                android:layout_row="1"
                android:layout_column="3"
                />
        <Button
                style="@style/keyboard_char_style"
                android:text="e"
                android:id="@+id/buttone"
                android:layout_row="1"
                android:layout_column="4"
                />
        <Button
                style="@style/keyboard_char_style"
                android:text="f"
                android:id="@+id/buttonf"
                android:layout_row="1"
                android:layout_column="5"
                />
        <Button
                style="@style/keyboard_char_style"
                android:text="g"
                android:id="@+id/buttong"
                android:layout_row="1"
                android:layout_column="6"
                />
        <Button
                style="@style/keyboard_char_style"
                android:text="h"
                android:id="@+id/buttonh"
                android:layout_row="1"
                android:layout_column="7"
                />
        <Button
                style="@style/keyboard_char_style"
                android:text="i"
                android:id="@+id/buttoni"
                android:layout_row="1"
                android:layout_column="8"
                />
        <Button
                style="@style/keyboard_char_style"
                android:text="j"
                android:id="@+id/buttonj"
                android:layout_row="1"
                android:layout_column="9"
                />
        <Button
                style="@style/keyboard_char_style"
                android:text="k"
                android:id="@+id/buttonk"
                android:layout_row="2"
                android:layout_column="0"
                />
        <Button
                style="@style/keyboard_char_style"
                android:text="l"
                android:id="@+id/buttonl"
                android:layout_row="2"
                android:layout_column="1"
                />
        <Button
                style="@style/keyboard_char_style"
                android:text="m"
                android:id="@+id/buttonm"
                android:layout_row="2"
                android:layout_column="2"
                />
        <Button
                style="@style/keyboard_char_style"
                android:text="n"
                android:id="@+id/buttonn"
                android:layout_row="2"
                android:layout_column="3"
                />
        <Button
                style="@style/keyboard_char_style"
                android:text="o"
                android:id="@+id/buttono"
                android:layout_row="2"
                android:layout_column="4"
                />
        <Button
                style="@style/keyboard_char_style"
                android:text="p"
                android:id="@+id/buttonp"
                android:layout_row="2"
                android:layout_column="5"
                />
        <Button
                style="@style/keyboard_char_style"
                android:text="q"
                android:id="@+id/buttonq"
                android:layout_row="2"
                android:layout_column="6"
                />
        <Button
                style="@style/keyboard_char_style"
                android:text="r"
                android:id="@+id/buttonr"
                android:layout_row="2"
                android:layout_column="7"
                />
        <Button
                style="@style/keyboard_char_style"
                android:text="s"
                android:id="@+id/buttons"
                android:layout_row="2"
                android:layout_column="8"
                />
        <Button
                style="@style/keyboard_char_style"
                android:text="t"
                android:id="@+id/buttont"
                android:layout_row="2"
                android:layout_column="9"
                />
        <Button
                style="@style/keyboard_char_style"
                android:text="u"
                android:id="@+id/buttonu"
                android:layout_row="3"
                android:layout_column="6"
                />
        <Button
                style="@style/keyboard_char_style"
                android:text="v"
                android:id="@+id/buttonv"
                android:layout_row="3"
                android:layout_column="7"
                />
        <Button
                style="@style/keyboard_char_style"
                android:text="w"
                android:id="@+id/buttonw"
                android:layout_row="3"
                android:layout_column="2"
                />
        <Button
                style="@style/keyboard_char_style"
                android:text="x"
                android:id="@+id/buttonx"
                android:layout_row="3"
                android:layout_column="3"
                />
        <Button
                style="@style/keyboard_char_style"
                android:text="y"
                android:id="@+id/buttony"
                android:layout_row="3"
                android:layout_column="4"
                />
        <Button
                style="@style/keyboard_char_style"
                android:text="z"
                android:id="@+id/buttonz"
                android:layout_row="3"
                android:layout_column="5"
                />

        <Button
                style="@style/keyboard_char_style"
                android:text="╳"
                android:id="@+id/button_cancel"
                android:layout_row="3"
                android:layout_column="0"
                />

        <Button
                style="@style/keyboard_char_style"
                android:text="←"
                android:id="@+id/button_back"
                android:layout_row="3"
                android:layout_column="9"
                />

    </GridLayout>
    <Button
            android:layout_marginTop="16dp"
            android:layout_width="140dp"
            android:layout_height="56dp"
            android:text="确定"
            android:id="@+id/char_button_ok"
            android:layout_gravity="center_horizontal"/>


</LinearLayout>