<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_gravity="center">


    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:focusable="false"
            android:editable="false"
            android:id="@+id/numeric_passwd_input"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:hint="输入密码"
            android:gravity="center"/>

    <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="4"
            android:columnCount="3"
            android:layout_gravity="center">
        <Button style="@style/keyboard_btn_style"
                android:text="1"
                android:layout_column="0"
                android:layout_row="0"
                android:id="@+id/key_btn_1"
                />
        <Button style="@style/keyboard_btn_style"
                android:text="2"
                android:layout_column="1"
                android:layout_row="0"
                android:id="@+id/key_btn_2"
                />
        <Button style="@style/keyboard_btn_style"
                android:text="3"
                android:layout_column="2"
                android:layout_row="0"
                android:id="@+id/key_btn_3"
                />
        <Button style="@style/keyboard_btn_style"
                android:text="4"
                android:layout_column="0"
                android:layout_row="1"
                android:id="@+id/key_btn_4"
                />
        <Button style="@style/keyboard_btn_style"
                android:text="5"
                android:layout_column="1"
                android:layout_row="1"
                android:id="@+id/key_btn_5"
                />

        <Button style="@style/keyboard_btn_style"
                android:text="6"
                android:layout_column="2"
                android:layout_row="1"
                android:id="@+id/key_btn_6"
                />

        <Button style="@style/keyboard_btn_style"
                android:text="7"
                android:layout_column="0"
                android:layout_row="2"
                android:id="@+id/key_btn_7"
                />
        <Button style="@style/keyboard_btn_style"
                android:text="8"
                android:layout_column="1"
                android:layout_row="2"
                android:id="@+id/key_btn_8"
                />
        <Button style="@style/keyboard_btn_style"
                android:text="9"
                android:layout_column="2"
                android:layout_row="2"
                android:id="@+id/key_btn_9"
                />
        <Button style="@style/keyboard_btn_style"
                android:text="╳"
                android:layout_column="0"
                android:layout_row="3"
                android:id="@+id/key_btn_cancel"
                />
        <Button style="@style/keyboard_btn_style"
                android:text="0"
                android:layout_column="1"
                android:layout_row="3"
                android:id="@+id/key_btn_0"
                />
        <Button style="@style/keyboard_btn_style"
                android:text="←"
                android:layout_column="2"
                android:layout_row="3"
                android:id="@+id/key_btn_back"
                />
    </GridLayout>

    <Button
            android:layout_marginTop="16dp"
            android:layout_width="140dp"
            android:layout_height="56dp"
            android:text="确定"
            android:id="@+id/numeric_button_ok"
            android:layout_gravity="center_horizontal"/>
</LinearLayout>